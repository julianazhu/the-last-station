  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "/home/riadre/.rvm/gems/ruby-2.5.0/bin/rspec",
      "args": [
        "--pattern",
        "${workspaceRoot}/spec/**/*_spec.rb"
      ]
    },
    {
      "name": "Debug RSpec - open spec file",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "useBundler": true,
      "pathToBundler": "/usr/share/rvm/rubies/ruby-2.5.0/bin/bundle",
      "pathToRDebugIDE": "/home/riadre/.rvm/gems/ruby-2.5.0/bin/rdebug-ide",
      "debuggerPort": "1235",
      "program": "/home/riadre/.rvm/gems/ruby-2.5.0/bin/rspec",
      "args": [
        "${file}"
      ]
    },
  ]
}