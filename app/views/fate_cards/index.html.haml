%h1 Listing fate_cards
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @fate_cards.each do |fate_card|
      %tr
        %td= link_to 'Show', fate_card
        %td= link_to 'Edit', edit_fate_card_path(fate_card)
        %td= link_to 'Destroy', fate_card, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Fate card', new_fate_card_path
