<% @branches.each do |branch|%>
  <div class="play_branch_card" <%= ", class=\"ineligible\"" if branch.include? 'ineligible' %> >
    <div class="play_branch_card_top">
      <h4><%= branch.first.title %></h4>
      <%= branch.first.image_path %>
      <p><%= branch.first.description %></p>
    </div>
    <div class="play_branch_card_bottom" >
      <%  %>
        <%= button_to "Go", play_branch_path(:branch_id => branch.first.id), :class => "go_button", :method => "get" %>
      <% unless branch.first.branch_requirements.empty? %>
        <div class="requirement_description">
          <p><i>Requires
          <% branch.first.branch_requirements.each_with_index do |requirement, index|%>
            <% if index != 0 %>
              and
            <% end %>
              <%= requirement.quality.name %> <%= requirement.get_level.rank if requirement.get_level.present?%>
          <% end %>
          </i></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>