<h1><%= @story.title %></h1>
<% if @story.image_path?%>
  <p><%= image_tag "#{@story.image_path}" %></p>
<% end %>
<p><%= @story.body %></p>

<% unless @story.branches.nil?%>
  <ul>
  <% @story.branches.each do |branch|%>
    <li>
      <%= branch.title %>
      <ul>
        <li>
          <%= branch.description %>
          <%= link_to "Continue", branch_path(:branch_id => branch.id, :character_id => @character.id)%>.
        </li>
      </ul>
    </li>
  <% end %>
  </ul>
<% end %>
<% if @character.nil? %>
  <p><%= link_to 'Edit Story', edit_story_path(@story) %></p>
  <p><%= link_to 'Delete Story', story_path(@story), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <p><%= link_to 'Show All Story Cards', stories_path %></p>
<% else %>
  <% %>
    <p><p>
<% end %>