%tr.nested-fields
  %td
    = f.select(:quality_id, Quality.all.collect {|q| [ q.name, q.id ] }, { include_blank: true })
  %td
    = f.select(:operation, [['plus','plus'], ['minus','minus'],['equals','equals']], { include_blank: true })
  %td
    = f.text_field :amount
  %td
    = link_to_remove_association "Delete", f
